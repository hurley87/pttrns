body
  margin 0
  padding 0
  background #111 
  font-family helvetica
  font-size 1.5em

.wrapper
  width 300px
  margin 1em auto
  
.container
  margin 1em auto
  width 300px
  min-height:2em
  line-height 2em

.zero
  text-align center
  
.buttons
  margin-top 1em
  height 400px
  
.text
  color #66ff33
  text-shadow 0 0 1px rgba(255,255,255,.75)
  letter-spacing .25em
  font-size 1em
  margin 35px 0px
  
.hint
  color #fff
  
.button
  border-radius 3px
  float left
  font-size 1.5em
  margin 0
  text-align center
  width 100px
  height 100px
  background #111
  -moz-box-shadow    inset 0 0 10px #111
  -webkit-box-shadow inset 0 0 10px #111
  box-shadow         inset 0 0 4px rgba(000,000,000,.5)
  line-height 100px
  cursor pointer
  color #555555
  transition box-shadow .3s, text-shadow .5s, color .1s

.button:active
	-moz-box-shadow    inset 0 0 20px #000
	-webkit-box-shadow inset 0 0 20px #000
	box-shadow         inset 0 0 20px #000
	color #66ccff
	text-shadow 0 0 5px rgba(255, 255, 255, .5)
  

.submit
  width 300px
  

.progress
	height 5px
	width 100%
.bar
	background-color #66ff33
	height 100%
	width 100%
	transition all 2s linear 

.question
  color #fff
  font-size 3em
  text-align center
  margin 30px
  
.question-enter
  opacity 0.01
  

.question-enter.question-enter-active
  opacity 1
  transition opacity 500ms ease-in
  

.question-leave
  opacity 1

.question-leave.question-leave-active
  opacity 0.01
  transition opacity 300ms ease-in
  

.question-appear
	opacity 0.01
  
.question-appear.question-appear-active
	opacity 1
	transition opacity .5s ease-in
  

