@import 'jeet'

$primaryColor = #4DB2E7
$secondaryColor = #fff

medium = 'screen and (min-width: 768px)'
large = 'screen and (min-width: 992px)'
xlarge = 'screen and (min-width: 1200px)'

body
  margin 0
  padding 0
  font-family helvetica
  font-size 1.5em
  overflow-x hidden

  
.submit
  width 100%
  text-align center
  background $primaryColor
  color #fff
  box-shadow inset 0 0 4px lighten($primaryColor, 5)
  padding 20px
  font-size 1em
  border none
  border-radius 3px
  margin-top 10px
  
.gameButtons
  height 360px
  
.gameButton
  margin 0
  column(1/3, cycle: 3, gutter: 0)
  line-height 80px
  cursor pointer
  text-align center
  height 80px
  margin-top 5px
  border-radius 50px
  
.btn-inner
  margin 5px
  background-color $primaryColor
  color #fff
  width 80px
  margin auto
  border-radius 50px
  font-size 2em
  

.white 
  background-color #fff
  
.wrapper
  padding 0 20px

.gameButton:active
  -moz-box-shadow    inset 0 0 20px $primaryColor
  -webkit-box-shadow inset 0 0 20px $primaryColor
  box-shadow         inset 0 0 20px $primaryColor
  color #66ccff
  text-shadow 0 0 5px rgba(255, 255, 255, .5)
  
.progress
  background-color $primaryColor 
  width 100%
  height 20px
  padding 5px
  margin-bottom 0px
  border-radius 0px
  
.bar
  background-color $secondaryColor
  height 100%
  width 100%

.question
  color $primaryColor
  text-align center
  padding 20px
  
.question-enter
  opacity 0.01

.question-enter.question-enter-active
  opacity 1
  transition opacity 500ms ease-in
  

.question-leave
  opacity 1

.question-leave.question-leave-active
  opacity 0.01
  transition opacity 300ms ease-in
  

.question-appear
  opacity 0.01
  
.question-appear.question-appear-active
  opacity 1
  transition opacity .5s ease-in
  


